<% layout('layouts/boilerplates') %> <!-- This line is added to include the boilerplate layout -->
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h2 class="mb-4">Edit Listing</h2>
        <form method="post" action="/listings/<%= listings.id %>?_method=PUT" class="form-group">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="listing[title]" 
                    id="title" 
                    value="<%= listings.title %>" 
                    placeholder="enter title"
                >
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea 
                    name="listing[description]" 
                    id="description" 
                    class="form-control" 
                    rows="4" 
                    placeholder="Enter Description"
                ><%= listings.description %></textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="listing[image][url]" 
                    id="image" 
                    value="<%= listings.image.url%>" 
                    placeholder="enter image URL/Link"
                >
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input 
                        type="number" 
                        class="form-control" 
                        name="listing[price]" 
                        id="price" 
                        value="<%= listings.price %>" 
                        placeholder="enter price"
                    >
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        name="listing[country]" 
                        id="country" 
                        value="<%= listings.country %>" 
                        placeholder="enter country"
                    >
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="listing[location]" 
                    id="location" 
                    value="<%= listings.location %>" 
                    placeholder="enter location"
                >
            </div>
            <button type="submit" class="btn btn-dark edit-btn mt-3">Edit</button>
            <br><br>
        </form>
    </div>
</div>
