<% layout('layouts/boilerplates') %>
  <div class="row">
    <div class="col-8 offset-2 mt-3 mb-2">
    <h3>Listing Details</h3>
    </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%= listings.image.url %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listings.title %></b> <br>
               <%= listings.description %> <br>
               &#8377;<%= listings.price.toLocaleString('en-IN') %> <br>
               <%= listings.location %> <br>
               <%= listings.country %> <br>
        </p>
        </div>
      </div>
      
      
      <div class="btns offset-3">
        <a href="/listings/<%= listings.id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn mb-2">Edit</a>
        <br><br>
        <form action="/listings/<%= listings.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-dark offset-4">Delete</button>
    
      </div>
    </div>
